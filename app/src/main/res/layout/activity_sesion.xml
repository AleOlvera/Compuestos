<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dos"
    android:orientation="vertical"
    tools:context="com.mecalogik.cp.Sesion">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/john"/>


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:textColor="#fff"
        android:textSize="15dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña" />


    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/margen_blanco"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_https_black_24dp"
        android:id="@+id/etcontraseña_sesion"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:layout_marginTop="40dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:background="@drawable/margen_blanco"
        android:id="@+id/btn_sesio"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Entrar" />

</LinearLayout>

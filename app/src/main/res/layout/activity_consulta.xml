<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/laboratorio1"
    tools:context="com.mecalogik.cp.Consulta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:text="CONSULTA DE COMPUESTOS QUÍMICOS"
            android:textSize="25dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_marginTop="30dp"
                android:hint="Id"
                android:textColorHint="#000"
                android:id="@+id/txtid"
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:numeric="decimal"
                android:layout_height="wrap_content"
                android:textColor="#000"/>
            <Button
                android:id="@+id/btnconsultar"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonstyleselector"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultar"
                android:textColor="#000"
                android:gravity="center"/>
            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/john"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:textSize="17dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRES"/>

            <EditText
                android:enabled="false"
                android:layout_marginTop="5dp"
                android:textColorHint="#000"
                android:id="@+id/txtnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"/>
            <TextView
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANTIDAD"/>

            <EditText
                android:enabled="false"
                android:layout_marginTop="5dp"
                android:textColorHint="#000"
                android:id="@+id/txtCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"/>


        </LinearLayout>

        <TextView
            android:textSize="20dp"
            android:textColorHint="#000"
            android:textColor="#000"
            android:autoLink="web"
            android:clickable="true"
            android:hint="pdf"
            android:layout_marginTop="10dp"
            android:id="@+id/ettpdf_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <EditText
                android:enabled="false"
                android:id="@+id/txtinformacion"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Información"
                android:textColorHint="#000"
                android:textColor="#000"/>

        </ScrollView>


    </LinearLayout>

</LinearLayout>

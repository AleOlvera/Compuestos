        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_https_black_24dp"/>


    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:layout_marginTop="30dp"
